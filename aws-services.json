{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Keboola Indigo UI site services (S3, Cloudformation, etc.)",
  "Resources": {
    "IndigoUiS3": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": "indigo-ui-site-services"
          }
        ]
      }
    },
    "User": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "S3Access",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:*"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref": "IndigoUiS3"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "AccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "User"
        }
      }
    }
  },
  "Outputs": {
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    },
    "IndigoUiS3": {
      "Value": {
        "Ref": "IndigoUiS3"
      }
    },
    "AccessKeyId": {
      "Value": {
        "Ref": "AccessKey"
      }
    },
    "AccessKeySecret": {
      "Value": {
        "Fn::GetAtt": [
          "AccessKey",
          "SecretAccessKey"
        ]
      }
    }
  }
}
